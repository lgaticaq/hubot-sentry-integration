{
  "compilerOptions": {
    "lib": [ "es2017", "es7" ],
    "allowJs": true,
    "checkJs": true,
    "downlevelIteration": true,
    "outDir": "build",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "coverage",
    "build"
  ]
}
